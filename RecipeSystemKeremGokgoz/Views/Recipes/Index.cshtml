@model IEnumerable<RecipeSystemKeremGokgoz.Models.RecipesTable>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h4>All Recipes</h4>
    <hr />
    <table cellpadding="0" cellspacing="0" border="1">
        <tr>
            <th>RecId</th>
            <th>UserId</th>
            <th>CatId</th>
            <th>TecTitle</th>
            <th>Images</th>
            <th>RecDetails</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>item.RecId</td>
                <td>item.UserId</td>
                <td>item.CatId</td>
                <td>item.RecTitle</td>
                <td>item.Images</td>
                <td>item.RecDetails</td>
                 <td>
                <input type="button" id="btnpopup" value="Add" onclick="ShowModelPopUp();" />
                </td>
            </tr>
        }
    </table>

    <div class="modal fade" id="dvAddRecipes" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" style="visibility:hidden">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <div class=" gutter-b">
                        <div class="py-0" id="dvSaveContact">
                            <div class="form-group row">
                                <div class="col-lg-12">
                                    <label>Category Id</label>
                                    <input type="text" class="form-control" placeholder="CatId" onkeydown="return getFirstLine(event)" id="CatId" name="CatId" value="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-12">
                                    <label>RecTitle</label>
                                    <input type="text" class="form-control" placeholder="RecTitle" onkeydown="return getFirstLine(event)" id="RecTitle" name="RecTitle" value="" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-lg-12">
                                    <label>RecDetails</label>
                                    <input type="text" class="form-control" placeholder="RecDetails" onkeydown="return getFirstLine(event)" id="RecDetails" name="RecDetails" value="" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" id="updatePropertyId" name="updatePropertyId" />
                    <button type="button" class="btn btn-secondary font-weight-bold" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary font-weight-bold" id="btnUpdateProperty">Save</button>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

